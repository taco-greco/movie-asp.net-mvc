@model IEnumerable<MovieList.Models.Entities.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model) {
    <div class="col">
        <div class="card h-100">
                <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <span class="badge bg-secondary">
                        @Html.DisplayFor(modelItem => item.Genre)
                </span>
                    <span class="badge bg-dark">@Html.DisplayFor(modelItem => item.Year)</span>
                <p class="card-text">
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>
            </div>
                <div class="card-footer">
                    <a class="text-body-secondary block btn btn-primary" asp-controller="Movies" asp-action="Edit" asp-route-id=@item.Id>Edit</a>
                    <a class="text-body-secondary block btn btn-danger" asp-controller="Movies" asp-action="Delete" asp-route-id=@item.Id>Delete</a>

            </div>
        </div>
    </div>
    }
</div>


